<InstallScript>
    <SteamId>8930</SteamId>
    <AssetsPath Filename="steamassets/assets"/>
    <CheckFor Filename="Civ5XP"/>
    <VersionFrom Filename="Civ5XP"/>

    <Package Name="core">
        <RenameFile Filename="Civ5XP" RenameTo="Civ5XP.orig"/>

        <InstallBinary Filename="mppatch_core.so"/>
        <WriteConfig Filename="mppatch_config.ini" Section="MPPatch"/>

        <AdditionalFile Filename="Civ5XP" Source="install/Civ5XP.sh" SetExecutable="true"/>
        <AdditionalFile Filename="Civ5XP.launch" Source="install/Civ5XP.launch.sh" SetExecutable="true"/>
        <AdditionalFile Filename="Civ5XP.dbg" Source="install/Civ5XP.dbg.sh" SetExecutable="true"/>
    </Package>
    <Package Name="multiplayer" Depends="core">
        <SetFlag Name="enableMultiplayerPatch"/>
        <WriteDLC Source="ui/mppatch.xml" Target="dlc/mppatch" TextData="gameplay/xml/newtext/mppatch_textdata"/>
    </Package>
    <Package Name="luajit" Depends="core">
        <SetFlag Name="enableLuaJIT"/>
        <AdditionalFile Filename="mppatch_luajit.so" Source="native/luajit_linux.so"/>
    </Package>
    <Package Name="debug">
        <SetFlag Name="enableLogging"/>
        <SetFlag Name="enableDebug"/>
    </Package>

    <Cleanup>
        <RenameIfExists Filename="Civ5XP.orig" RenameTo="Civ5XP"/>
        <CheckFile Filename="Civ5XP.launch"/>
        <CheckFile Filename="Civ5XP.orig"/>
        <CheckFile Filename="Civ5XP.dbg"/>
        <CheckFile Filename="libmppatch.so"/>
        <CheckFile Filename="mppatch_config.ini"/>
        <CheckFile Filename="steamassets/assets/dlc/mppatch"/>
        <CheckFile Filename="steamassets/assets/gameplay/xml/newtext/mppatch_textdata"/>
    </Cleanup>
</InstallScript>