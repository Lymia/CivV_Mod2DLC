<UIPatch>
    <Info UUID="df74f698-2343-11e6-89c4-8fef6d8f889e" Version="1" Priority="1" Name="MPPatch" ShortName="MPPatch"/>

    <Include Filename="mppatch_runtime.lua"  Source="ui/lib/mppatch_runtime.lua" />
    <Include Filename="mppatch_mtutils.lua"  Source="ui/lib/mppatch_mtutils.lua" />
    <Include Filename="mppatch_utils.lua"    Source="ui/lib/mppatch_utils.lua"   />
    <Include Filename="mppatch_modutils.lua" Source="ui/lib/mppatch_modutils.lua"/>
    <Include Filename="mppatch_uiutils.lua"  Source="ui/lib/mppatch_uiutils.lua" />
    <Include Filename="mppatch_version.lua"  Source="ui/lib/mppatch_version.lua" />

    <TextData Filename="ui/text/text_en_US.xml"/>

    <Screen Filename="mppatch_multiplayerproxy" Source="ui/screen/mppatch_multiplayerproxy"/>

    <!-- Basic frontend hooks -->
    <Hook Filename="MainMenu.lua">
        <Include Filename="mppatch_runtime.lua"/>
        <InjectAfter Filename="ui/hooks/mainmenu_status.lua"/>
        <InjectAfter Filename="ui/hooks/mainmenu_resetpatch.lua"/>
        <InjectAfter Filename="ui/hooks/mainmenu_eventdebug.lua"/>
    </Hook>
    <Hook Filename="ContentSwitch.lua">
        <InjectAfter Filename="ui/hooks/contentswitch_debug.lua"/>
    </Hook>

    <!-- Multiplayer/Mods frontend hooks -->
    <Hook Filename="ModsMenu.lua">
        <Include Filename="mppatch_runtime.lua"/>
        <InjectAfter Filename="ui/hooks/modsmenu_enablempmenu.lua"/>
    </Hook>
    <Hook Filename="MultiplayerSelect.lua">
        <Include Filename="mppatch_runtime.lua"/>
        <InjectAfter Filename="ui/hooks/multiplayerselect_keepmods.lua"/>
    </Hook>
    <Hook Filename="Lobby.lua">
        <Include Filename="mppatch_runtime.lua"/>
        <InjectAfter Filename="ui/hooks/common_setbismodding.lua"/>
    </Hook>
    <Hook Filename="MPGameSetupScreen.lua">
        <Include Filename="mppatch_runtime.lua"/>
        <InjectBefore Filename="ui/hooks/common_setbismodding.lua"/>
    </Hook>

    <!-- Multiplayer lobby modifications -->
    <Hook Filename="MPGameOptions.lua">
        <Include Filename="mppatch_runtime.lua"/>
        <InjectAfter Filename="ui/hooks/mpgameoptions_dlcselection.lua"/>
    </Hook>
    <Hook Filename="JoiningRoom.lua">
        <Include Filename="mppatch_runtime.lua"/>
        <InjectAfter Filename="ui/hooks/joiningroom_keepmods.lua"/>
    </Hook>
    <Hook Filename="StagingRoom.lua">
        <Include Filename="mppatch_runtime.lua"/>
        <InjectAfter Filename="ui/hooks/stagingroom_keepmods.lua"/>
    </Hook>
</UIPatch>